<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/heroo"
    tools:context="com.internshala.helloworld.gym2.StartActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="33dp"
        android:visibility="gone"
        android:layout_below="@+id/fbButton"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:inputType="text"
            android:hint="First Name"
            android:textStyle="bold"
            android:ems="10"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/firstname" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:ems="10"
            android:hint="Last Name"
            android:textStyle="bold"
            android:layout_below="@+id/emailText"
            android:layout_alignRight="@+id/emailText"
            android:layout_alignEnd="@+id/emailText"
            android:id="@+id/lastname" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal"
            android:id="@+id/ll2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:ems="10"
                android:text="Gender"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner"

                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#ffffff"
                android:scrollbarSize="15dp"
                android:textColor="#ffffff"></Spinner>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textStyle="bold"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:ems="10"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/emailText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:hint="Password"
            android:textStyle="bold"
            android:layout_below="@+id/emailText"
            android:layout_alignRight="@+id/emailText"
            android:layout_alignEnd="@+id/emailText"
            android:id="@+id/pwdText" />
    </LinearLayout>

    <TextView
        android:text="Terms of Use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTerms"
        android:textColor="#696969"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Privacy Policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPrivacy"
        android:textColor="#696969"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_alignBaseline="@+id/textTerms"
        android:layout_alignBottom="@+id/textTerms"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/fbButton"
        android:background="@drawable/fbreg"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/startnow"
        android:id="@+id/imageView3"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textTerms"
        android:layout_alignStart="@+id/textTerms"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:text= "Create an account                         and start your journey"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/textTerms"
        android:layout_alignStart="@+id/textTerms"
        android:layout_alignRight="@+id/textPrivacy"
        android:layout_alignEnd="@+id/textPrivacy" />

    <TextView
        android:text="or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="#fff"
        android:layout_below="@+id/fbButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <Button
        android:id="@+id/emailButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/emailreg"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />


</RelativeLayout>